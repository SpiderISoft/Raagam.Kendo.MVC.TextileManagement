@model Raagam.TextileManagement.Model.StyleModel

@{
    ViewBag.Title = "Style";
    Layout = null;  
}

<script language="javascript" type="text/javascript" >
    $(document).ready(function (e) {

        $('#NewButton').click(function (event) {

            $('#StyleName').css("display", "inline");
            $('#StyleSequenceNumber').css("display", "none");
        });

        $('#EditButton').click(function (event) {
            $('#StyleName').css("display", "none");
            $('#StyleSequenceNumber').css("display", "inline");

        });
    });
</script>
<h2>Style</h2>
@using (Html.BeginForm(null, null, null, FormMethod.Post, new { id = "frmStyle", role = "form", @class = "form-horizontal" }))
{
    
           @Html.HiddenFor(m => m.Mode)

        <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>
                        <span>Style</span>
                    </h4>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <div class="col-lg-offset-8">
                            <label class="checkbox-inline">
                            @Html.CheckBoxFor(m => m.IsCompleted)&nbsp;&nbsp;Completed
                            </label>
                            <input type="button" value="New" id="NewButton" class="btn marginR10" />
                             <input type="button" value="Edit" id="EditButton" class="btn marginR10" />
                            <input type="button" value="Save" id="SaveButton" class="btn marginR10" />
                            <button class="btn btn-danger" id="CancelButton">Cancel</button>
                          </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.StyleName, new { @class = "col-lg-3 control-label", @for = "normalInput" })
                        <div class="col-lg-9">
                            @Html.TextBoxFor(m => m.StyleName, new { @class = "form-control", style = "height:35px;width:200px;" })
                            @Html.DropDownListFor(m => m.StyleSequenceNumber, Model.StyleDropDownList, "Select Style", new { @class = "form-control", style = "height:35px;width:200px;display: none" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.StyleDescription, new { @class = "col-lg-3 control-label", @for = "normalInput" })
                        <div class="col-lg-9">
                            @Html.TextAreaFor(m => m.StyleDescription, 5, 400, new { @class = "form-control" })
                        </div>
                    </div>
                   
                    <div class="form-group">
                        @Html.LabelFor(m => m.StyleTypeSequenceNumber, new { @class = "col-lg-3 control-label", @for = "normalInput" })
                        <div class="col-lg-9">
                            @Html.DropDownListFor(m => m.StyleTypeSequenceNumber, Model.StyleTypeDropDownList, "Select Style Type", new { @class = "form-control", style = "height:35px;width:200px;" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Html.Partial("~/Views/Merchandiser/StyleColor.cshtml", Model);
    @Html.Partial("~/Views/Merchandiser/StyleSize.cshtml", Model);
}