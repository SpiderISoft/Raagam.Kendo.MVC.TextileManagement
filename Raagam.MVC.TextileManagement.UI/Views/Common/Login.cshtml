@model Raagam.TextileManagement.Model.LoginModel

    <div class="container">

        <div id="header">

            <div class="row">

                <div class="navbar">
                    <div class="container">
                        
                    </div>
                </div><!-- /navbar -->

            </div><!-- End .row -->

        </div><!-- End #header -->

    </div><!-- End .container -->    

    <div class="container">

        <div class="loginContainer">
 @using (Html.BeginForm(null, null, null, FormMethod.Post, new { id = "frmLogin", @class = "form-horizontal", role = "form" }))
        {
         
            
                <div class="form-group">
                    <label class="col-lg-12 control-label" for="username">Username:</label>
                    <div class="col-lg-12">
                        @Html.TextBoxFor(m => m.LoginName, new { id = "LoginName", type = "text", name = "username", @class = "form-control", placeholder = "Enter your username ..." })                    
                    </div>
                </div><!-- End .form-group  -->
                <div class="form-group">
                    <label class="col-lg-12 control-label" for="password">Password:</label>
                    <div class="col-lg-12">
                        @Html.TextBoxFor(m => m.Password, new { id = "Password", type = "password", name = "password", @class = "form-control" })
                        <span class="forgot help-block"><a href="#">Forgot your password?</a></span>
                    </div>
                </div><!-- End .form-group  -->
                <div class="form-group">
                    <div class="col-lg-12 clearfix form-actions">
                        <div class="checkbox left">
                            <label><input type="checkbox" id="keepLoged" value="Value" class="styled" name="logged" />&nbsp;Keep me logged in</label>
                        </div>
                        <button type="submit" class="btn btn-info right" id="loginBtn"><span class="icon16 icomoon-icon-enter white"></span> Login</button>
                    </div>
                </div><!-- End .form-group  -->
 
        }
  
        </div>

    </div><!-- End .container -->


    

@section scripts
{

     <script type="text/javascript">
         $(document).ready(function () {


             $("#loginForm").validate({
                 rules: {
                     username: {
                         required: true,
                         minlength: 4
                     },
                     password: {
                         required: true,
                         minlength: 6
                     }
                 },
                 messages: {
                     username: {
                         required: "Fill me please",
                         minlength: "My name is bigger"
                     },
                     password: {
                         required: "Please provide a password",
                         minlength: "My password is more that 6 chars"
                     }
                 }
             });

             jQuery("#frmLogin").submit(function (e) {
                 debugger;
                 if ($("#frmLogin").valid()) {
                     $.ajax({
                         url: '@Url.Content("/Login/CheckLogin")',
                         type: 'POST',
                         data:
                        {
                            LoginName: $('#LoginName').val(),
                            Password: $('#Password').val()
                        },
                         success: function (result) {
                             debugger;
                             $("html").html(result);
                         },
                         error: function (e) {
                             debugger;
                             alert(e.responseText);
                         }
                     });

                 }

                 return false;
             });
         });
    </script> 
}